<h1>投稿詳細ページ</h1>
<h3><%= @post.user.name %></h3>
<%= @post.created_at.to_s(:datetime_jp) %>
<h3><%= @post.content %></h3>
<h3><%= @comments.size %></h3>
<% @comments.each do |c| %>
	<div>
		<a href="/user/<%= @post.user.id %>"><%= c.user.name %></a>
		<%= c.content %>
		<hr>
	</div>
<% end %>
<%= form_for [@post,@comment] do |f| %>
	<%= f.text_field :content %>
	<br>
	<%= f.submit 'コメントする' %>
<% end %>

<%= link_to "ホームへ戻る", posts_path %>